# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/ai_document_extraction?schema=public"

# NextAuth Configuration
# Generate AUTH_SECRET with: npx auth secret
AUTH_SECRET="your-nextauth-secret-key-change-in-production"

# Azure AD (Entra ID) Configuration
# Get these values from Azure Portal > App Registrations
AZURE_AD_CLIENT_ID="your-azure-ad-client-id"
AZURE_AD_CLIENT_SECRET="your-azure-ad-client-secret"
AZURE_AD_TENANT_ID="your-azure-ad-tenant-id"

# Application
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="development"

