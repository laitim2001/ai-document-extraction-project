  p99ResponseMs  Int?            @map("p99_response_ms") // P99 回應時間

  // 錯誤分類
  errorsByType   Json?           @map("errors_by_type") // ErrorsByTypeSchema

  createdAt      DateTime        @default(now()) @map("created_at")

  @@unique([periodStart, periodType, cityCode])
  @@index([periodStart])
  @@index([cityCode])
  @@index([periodType, periodStart])
  @@map("n8n_connection_stats")
}

// 告警記錄模型
model AlertRecord {
  id               String        @id @default(cuid())

  // 告警資訊
  alertType        AlertType     @map("alert_type")
  severity         AlertSeverity
  title            String
  message          String        @db.Text
  details          Json?         // AlertDetailsSchema

  // 來源
  service          String        // 觸發告警的服務
  cityCode         String?       @map("city_code") // 相關城市

  // 狀態
  status           AlertStatus   @default(ACTIVE)
  acknowledgedBy   String?       @map("acknowledged_by") // 確認者 ID
  acknowledgedAt   DateTime?     @map("acknowledged_at") // 確認時間
  resolvedAt       DateTime?     @map("resolved_at") // 解決時間
  resolvedBy       String?       @map("resolved_by") // 解決者 ID
  resolutionNote   String?       @map("resolution_note") // 解決備註

  // 通知
  notificationsSent Json?        @map("notifications_sent") // NotificationsSentSchema

  // 關聯
  relatedAlertId   String?       @map("related_alert_id") // 相關告警 ID（用於告警串聯）

  // 審計
  createdAt        DateTime      @default(now()) @map("created_at")
  updatedAt        DateTime      @updatedAt @map("updated_at")

  @@index([alertType])
  @@index([status])
  @@index([service])
  @@index([severity])
  @@index([createdAt])
  @@index([service, status])
  @@map("alert_records")
}

// 告警通知配置模型
model AlertNotificationConfig {
  id             String        @id @default(cuid())

  // 配置名稱
  name           String
  description    String?

  // 觸發條件
  services       String[]      // 適用的服務列表
  alertTypes     AlertType[]   @map("alert_types") // 適用的告警類型
  minSeverity    AlertSeverity @map("min_severity") // 最低嚴重程度

  // 通知管道
  emailEnabled   Boolean       @default(false) @map("email_enabled")
  emailRecipients String[]     @map("email_recipients") // Email 收件人列表
  teamsEnabled   Boolean       @default(false) @map("teams_enabled")
  teamsWebhookUrl String?      @map("teams_webhook_url") // Teams Webhook URL
  slackEnabled   Boolean       @default(false) @map("slack_enabled")
  slackWebhookUrl String?      @map("slack_webhook_url") // Slack Webhook URL

  // 抑制設定
  cooldownMinutes Int          @default(30) @map("cooldown_minutes") // 相同告警的冷卻時間
  suppressDuplicates Boolean   @default(true) @map("suppress_duplicates")

  // 狀態
  isActive       Boolean       @default(true) @map("is_active")

  createdAt      DateTime      @default(now()) @map("created_at")
  updatedAt      DateTime      @updatedAt @map("updated_at")

  @@map("alert_notification_configs")
}

