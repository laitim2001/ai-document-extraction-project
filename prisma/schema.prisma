// 文件處理階段記錄模型
model DocumentProcessingStage {
  id            String                @id @default(cuid())

  // 文件關聯
  documentId    String                @map("document_id")
  document      Document              @relation(fields: [documentId], references: [id], onDelete: Cascade)

  // 階段資訊
  stage         ProcessingStage
  stageName     String                @map("stage_name")     // 階段顯示名稱
  stageOrder    Int                   @map("stage_order")    // 階段順序

  // 狀態
  status        ProcessingStageStatus @default(PENDING)

  // 時間追蹤
  scheduledAt   DateTime?             @map("scheduled_at")   // 排程時間
  startedAt     DateTime?             @map("started_at")     // 開始時間
  completedAt   DateTime?             @map("completed_at")   // 完成時間
  durationMs    Int?                  @map("duration_ms")    // 執行時長（毫秒）

  // 結果與錯誤
  result        Json?                                        // 階段處理結果
  error         String?                                      // 錯誤訊息

  // 來源追蹤
  sourceType    String?               @map("source_type")    // 來源類型
  sourceId      String?               @map("source_id")      // 來源 ID

  // 額外元數據
  metadata      Json?

  // 時間戳
  createdAt     DateTime              @default(now()) @map("created_at")
  updatedAt     DateTime              @updatedAt @map("updated_at")

  // 索引
  @@index([documentId])
  @@index([stage])
  @@index([status])
  @@index([stageOrder])
  @@index([sourceType])
  @@index([createdAt])

  // 每個文件每個階段只能有一筆記錄
  @@unique([documentId, stage])
  @@map("document_processing_stages")
}

