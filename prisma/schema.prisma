// 外部 API Webhook 發送狀態
enum ExternalWebhookDeliveryStatus {
  PENDING   // 等待發送
  SENDING   // 發送中
  DELIVERED // 已送達
  FAILED    // 最終失敗
  RETRYING  // 等待重試
}

// Webhook 發送記錄
model ExternalWebhookDelivery {
  id              String                        @id @default(cuid())

  // 任務關聯
  taskId          String                        @map("task_id")
  task            ExternalApiTask               @relation(fields: [taskId], references: [id], onDelete: Cascade)

  // 發送資訊
  event           WebhookEventType
  targetUrl       String                        @map("target_url") @db.VarChar(2048)
  payload         Json

  // 安全簽名
  signature       String                        @db.VarChar(128)
  timestamp       BigInt

  // 發送狀態
  status          ExternalWebhookDeliveryStatus @default(PENDING)
  httpStatus      Int?                  @map("http_status")
  responseBody    String?               @map("response_body") @db.Text
  errorMessage    String?               @map("error_message") @db.VarChar(1000)

  // 重試控制
  attempts        Int                   @default(0)
  maxAttempts     Int                   @default(4) @map("max_attempts") // 首次 + 3 次重試
  nextRetryAt     DateTime?             @map("next_retry_at")
  lastAttemptAt   DateTime?             @map("last_attempt_at")

  // 時間記錄
  createdAt       DateTime              @default(now()) @map("created_at")
  completedAt     DateTime?             @map("completed_at")

  @@index([taskId])
  @@index([status])
  @@index([nextRetryAt])
  @@index([createdAt])
  @@map("external_webhook_deliveries")
}

