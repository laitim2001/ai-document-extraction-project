// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// =====================
// Authentication Models (NextAuth v5)
// =====================

model User {
  id                String     @id @default(cuid())
  email             String     @unique
  emailVerified     DateTime?  @map("email_verified")
  name              String?
  image             String?
  password          String? // Optional: 用於本地登入（若未來需要）
  azureAdId         String?    @unique @map("azure_ad_id") // Azure AD 用戶 ID
  status            UserStatus @default(ACTIVE)
  isGlobalAdmin     Boolean    @default(false) @map("is_global_admin") // Story 6.1: 全域管理員
  isRegionalManager Boolean    @default(false) @map("is_regional_manager") // Story 6.1: 區域管理員
  createdAt         DateTime   @default(now()) @map("created_at")
  updatedAt         DateTime   @updatedAt @map("updated_at")
  lastLoginAt       DateTime?  @map("last_login_at")
  lastActiveAt      DateTime?  @map("last_active_at") // Story 12-1: 最後活躍時間（用於活躍用戶統計）
  preferredLocale   String?    @map("preferred_locale") @default("en") // Story 17-5: 用戶語言偏好

  // Story 18-1: 郵件驗證欄位
  emailVerificationToken   String?   @unique @map("email_verification_token")
  emailVerificationExpires DateTime? @map("email_verification_expires")

  // Story 18-3: 密碼重設欄位（預留）
  passwordResetToken   String?   @unique @map("password_reset_token")
  passwordResetExpires DateTime? @map("password_reset_expires")

  // Relations
  accounts               Account[]
  sessions               Session[]
  auditLogs              AuditLog[]
  roles                  UserRole[] // 用戶角色關聯
  documents              Document[] // 用戶上傳的文件
  forwarderAssignments   ForwarderIdentification[] // 手動指派的 Forwarder
  assignedQueues         ProcessingQueue[] // 分配的處理隊列
  reviewRecords          ReviewRecord[] // 審核記錄（Story 3.4）
  corrections            Correction[] // 欄位修正記錄（Story 3.5）
  reviewedSuggestions    RuleSuggestion[]          @relation("RuleSuggestionReviewer") // 審核的規則建議（Story 3.6）
  suggestedRules         RuleSuggestion[]          @relation("RuleSuggestionSuggester") // 建議的規則（Story 3.8）
  notifications          Notification[] // 通知（Story 3.6）
  escalationsCreated     Escalation[]              @relation("EscalationEscalator") // 發起的升級（Story 3.7）
  escalationsAssigned    Escalation[]              @relation("EscalationAssignee") // 被分配的升級（Story 3.7）
  escalationsResolved    Escalation[]              @relation("EscalationResolver") // 處理的升級（Story 3.8）
  createdRules           MappingRule[]             @relation("RuleCreator") // 創建的規則（Story 4.1）
  createdVersions        RuleVersion[]             @relation("VersionCreator") // 創建的規則版本（Story 4.7）
  verifiedApplications   RuleApplication[]         @relation("ApplicationVerifier") // 驗證的規則應用（Story 4.8）
  changeRequestsCreated  RuleChangeRequest[]       @relation("ChangeRequester") // 創建的變更請求（Story 5.3）
  changeRequestsReviewed RuleChangeRequest[]       @relation("ChangeReviewer") // 審核的變更請求（Story 5.3）
  testTasksCreated       RuleTestTask[]            @relation("TestTaskCreator") // 創建的測試任務（Story 5.4）
  forwardersCreated      Forwarder[]               @relation("ForwarderCreator") // 創建的 Forwarder（Story 5.5）
  cityAccesses           UserCityAccess[]          @relation("UserCityAccess") // Story 6.1: 城市訪問權限
  grantedCityAccesses    UserCityAccess[]          @relation("GrantedCityAccess") // Story 6.1: 授予的城市訪問權限
  securityLogs           SecurityLog[]             @relation("SecurityLogUser") // Story 6.2: 安全事件日誌
  resolvedSecurityLogs   SecurityLog[]             @relation("SecurityLogResolver") // Story 6.2: 處理的安全事件
  regionAccesses         UserRegionAccess[]        @relation("UserRegionAccess") // Story 6.3: 區域訪問權限
  grantedRegionAccesses  UserRegionAccess[]        @relation("GrantedRegionAccess") // Story 6.3: 授予的區域訪問權限
  configsUpdated         SystemConfig[]            @relation("ConfigUpdater") // Story 6.4: 更新的系統配置
  configChanges          ConfigHistory[]           @relation("ConfigChanger") // Story 6.4: 配置變更歷史
  reportJobs             ReportJob[]               @relation("UserReportJobs") // Story 7.4: 報表任務
  monthlyReports         MonthlyReport[]           @relation("MonthlyReportGenerator") // Story 7.10: 月度報告
  dataChangeHistories    DataChangeHistory[]       @relation("DataChangeHistoryCreator") // Story 8.2: 數據變更歷史
  traceabilityReports    TraceabilityReport[]      @relation("TraceabilityReportGenerator") // Story 8.4: 追溯報告
  auditReportJobs        AuditReportJob[]          @relation("AuditReportJobRequester") // Story 8.5: 審計報告任務
  auditReportDownloads   AuditReportDownload[]     @relation("AuditReportDownloader") // Story 8.5: 審計報告下載
  retentionPolicies      DataRetentionPolicy[]     @relation("RetentionPolicyCreator") // Story 8.6: 保留策略創建者
  deletionRequestsCreated DataDeletionRequest[]    @relation("DeletionRequestRequester") // Story 8.6: 刪除請求創建者
  deletionRequestsApproved DataDeletionRequest[]   @relation("DeletionRequestApprover") // Story 8.6: 刪除請求審批者
  restoreRequests        DataRestoreRequest[]      @relation("RestoreRequestRequester") // Story 8.6: 還原請求創建者
  sharePointConfigs          SharePointConfig[]        @relation("SharePointConfigCreator") // Story 9.1: SharePoint 配置創建者
  sharePointConfigsUpdated   SharePointConfig[]        @relation("SharePointConfigUpdater") // Story 9.2: SharePoint 配置更新者
  apiKeys                ApiKey[]                  @relation("ApiKeyCreator") // Story 9.1: API Key 創建者
  outlookConfigs         OutlookConfig[]           @relation("OutlookConfigCreator") // Story 9.3: Outlook 配置創建者
  outlookConfigsUpdated  OutlookConfig[]           @relation("OutlookConfigUpdater") // Story 9.4: Outlook 配置更新者
  n8nApiKeys             N8nApiKey[]               @relation("N8nApiKeyCreator") // Story 10.1: n8n API Key 創建者
  webhookConfigsCreated  WebhookConfig[]           @relation("WebhookConfigCreator") // Story 10.2: Webhook 配置創建者
  webhookConfigsUpdated  WebhookConfig[]           @relation("WebhookConfigUpdater") // Story 10.2: Webhook 配置更新者
  webhookConfigHistories WebhookConfigHistory[]    @relation("WebhookConfigHistoryCreator") // Story 10.2: 配置變更歷史
  workflowDefinitionsCreated  WorkflowDefinition[]      @relation("WorkflowDefinitionCreator") // Story 10.4: 工作流定義創建者
  workflowDefinitionsUpdated  WorkflowDefinition[]      @relation("WorkflowDefinitionUpdater") // Story 10.4: 工作流定義更新者
  externalApiKeys             ExternalApiKey[]          @relation("ExternalApiKeyCreator") // Story 11.1: 外部 API Key 創建者
  alertRulesCreated           AlertRule[]               @relation("AlertRuleCreator") // Story 12-3: 創建的告警規則
  backupsCreated              Backup[]                  @relation("BackupCreator") // Story 12-5: 創建的備份
  backupSchedulesCreated      BackupSchedule[]          @relation("BackupScheduleCreator") // Story 12-5: 創建的備份排程
  restoreRecordsCreated       RestoreRecord[]           @relation("RestoreRecordCreator") // Story 12-6: 創建的恢復記錄
  systemLogs                  SystemLog[]               @relation("SystemLogUser") // Story 12-7: 系統日誌
  logExports                  LogExport[]               @relation("LogExportCreator") // Story 12-7: 日誌匯出
  historicalBatchesCreated    HistoricalBatch[]         @relation("HistoricalBatchCreator") // Story 0-1: 歷史數據批量任務
  companiesCreated            Company[]                 @relation("CompanyCreator") // Story 0-3: 公司創建

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  createdAt    DateTime @default(now()) @map("created_at")
  userAgent    String?  @map("user_agent")
  ipAddress    String?  @map("ip_address")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expires])
  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// =====================
// Role & Permission Models (RBAC)
// =====================

model Role {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  permissions String[] // JSON array of permission strings
  isSystem    Boolean  @default(false) @map("is_system") // 系統預設角色不可刪除
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  users UserRole[]

  @@map("roles")
}

model UserRole {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  roleId    String   @map("role_id")
  cityId    String?  @map("city_id") // 城市歸屬（City Manager / Regional Manager 使用）
  createdAt DateTime @default(now()) @map("created_at")

  // Relations
  user User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  role Role  @relation(fields: [roleId], references: [id], onDelete: Cascade)
  city City? @relation(fields: [cityId], references: [id], onDelete: SetNull)

  @@unique([userId, roleId])
  @@index([userId])
  @@index([roleId])
  @@index([cityId])
  @@map("user_roles")
}

// =====================
// Region Model (Story 6.1)
// =====================

model Region {
  id        String       @id @default(uuid())
  code      String       @unique // e.g., "APAC", "EMEA", "AMER"
  name      String // e.g., "Asia Pacific"
  parentId  String?      @map("parent_id") // 支援階層式區域
  timezone  String       @default("UTC")
  status    RegionStatus @default(ACTIVE)
  createdAt DateTime     @default(now()) @map("created_at")
  updatedAt DateTime     @updatedAt @map("updated_at")

  // Relations
  parent       Region?            @relation("RegionHierarchy", fields: [parentId], references: [id])
  children     Region[]           @relation("RegionHierarchy")
  cities       City[]
  userAccesses UserRegionAccess[] // Story 6.3: 用戶區域訪問權限

  @@index([parentId])
  @@index([status])
  @@map("regions")
}

enum RegionStatus {
  ACTIVE
  INACTIVE
}

// =====================
// City Model (Story 6.1 Enhanced)
// =====================

model City {
  id        String     @id @default(uuid())
  code      String     @unique // 城市代碼，如 "HKG", "SIN", "LON"
  name      String // 城市名稱
  regionId  String     @map("region_id")
  timezone  String     @default("UTC") // e.g., "Asia/Hong_Kong"
  currency  String     @default("USD") // e.g., "HKD", "SGD"
  locale    String     @default("en-US") // 語言區域設定
  status    CityStatus @default(ACTIVE)
  config    Json? // 城市特定配置（閾值、選項等）
  createdAt DateTime   @default(now()) @map("created_at")
  updatedAt DateTime   @updatedAt @map("updated_at")

  // Relations
  region               Region                 @relation(fields: [regionId], references: [id])
  userRoles            UserRole[]
  userAccesses         UserCityAccess[]
  documents            Document[]             @relation("DocumentCity")
  auditLogs            AuditLog[]             @relation("AuditLogCity")
  systemConfigs        SystemConfig[]         @relation("ConfigCity") // Story 6.4: 城市層級配置
  processingStatistics ProcessingStatistics[] // Story 7.7: 城市處理量統計
  sharePointConfig     SharePointConfig?      // Story 9.1: SharePoint 配置（一對一）
  sharePointFetchLogs  SharePointFetchLog[]   // Story 9.1: SharePoint 獲取記錄
  outlookConfig        OutlookConfig?         // Story 9.3: Outlook 配置（一對一）
  outlookFetchLogs     OutlookFetchLog[]      // Story 9.3: Outlook 獲取記錄
  n8nApiKeys           N8nApiKey[]            // Story 10.1: n8n API Keys
  webhookConfigs       WebhookConfig[]        // Story 10.2: Webhook 配置
  workflowExecutions   WorkflowExecution[]    // Story 10.3: 工作流執行記錄
  workflowDefinitions  WorkflowDefinition[]   // Story 10.4: 工作流定義
  systemHealthLogs     SystemHealthLog[]      // Story 10.7: 系統健康日誌
  n8nConnectionStats   N8nConnectionStats[]   // Story 10.7: n8n 連接統計
  externalApiTasks     ExternalApiTask[]      // Story 11.1: 外部 API 任務
  alertRules           AlertRule[]            // Story 12-3: 警報規則
  alerts               Alert[]                // Story 12-3: 警報記錄

  @@index([regionId])
  @@index([status])
  @@index([code])
  @@map("cities")
}

enum CityStatus {
  ACTIVE // 啟用中
  INACTIVE // 已停用
  PENDING // 待啟用
}

// =====================
// UserCityAccess Model (Story 6.1)
// 用戶城市訪問權限
// =====================

model UserCityAccess {
  id          String      @id @default(uuid())
  userId      String      @map("user_id")
  cityId      String      @map("city_id")
  accessLevel AccessLevel @default(FULL)
  isPrimary   Boolean     @default(false) @map("is_primary") // 主要城市
  grantedBy   String      @map("granted_by")
  grantedAt   DateTime    @default(now()) @map("granted_at")
  expiresAt   DateTime?   @map("expires_at") // 可選的過期時間
  reason      String? // 授權原因

  // Relations
  user    User @relation("UserCityAccess", fields: [userId], references: [id], onDelete: Cascade)
  city    City @relation(fields: [cityId], references: [id])
  grantor User @relation("GrantedCityAccess", fields: [grantedBy], references: [id])

  @@unique([userId, cityId])
  @@index([userId])
  @@index([cityId])
  @@index([expiresAt])
  @@map("user_city_access")
}

enum AccessLevel {
  READ_ONLY // 僅讀取
  FULL // 完整訪問（讀寫）
}

// =====================
// UserRegionAccess Model (Story 6.3)
// 用戶區域訪問權限 - 區域經理管理
// =====================

model UserRegionAccess {
  id          String      @id @default(uuid())
  userId      String      @map("user_id")
  regionId    String      @map("region_id")
  accessLevel AccessLevel @default(FULL)
  grantedBy   String      @map("granted_by")
  grantedAt   DateTime    @default(now()) @map("granted_at")
  expiresAt   DateTime?   @map("expires_at") // 可選的過期時間
  reason      String? // 授權原因

  // Relations
  user    User   @relation("UserRegionAccess", fields: [userId], references: [id], onDelete: Cascade)
  region  Region @relation(fields: [regionId], references: [id])
  grantor User   @relation("GrantedRegionAccess", fields: [grantedBy], references: [id])

  @@unique([userId, regionId])
  @@index([userId])
  @@index([regionId])
  @@index([expiresAt])
  @@map("user_region_access")
}

// =====================
// Audit Models (Story 8.1)
// =====================

model AuditLog {
  id              String      @id @default(uuid())

  // 用戶資訊
  userId          String      @map("user_id")
  userName        String      @map("user_name")
  userEmail       String?     @map("user_email")

  // 操作資訊
  action          AuditAction
  resourceType    String      @map("resource_type")
  resourceId      String?     @map("resource_id")
  resourceName    String?     @map("resource_name")

  // 操作詳情
  description     String?
  changes         Json?       // { before: {...}, after: {...} }
  metadata        Json?

  // 請求資訊
  ipAddress       String?     @map("ip_address")
  userAgent       String?     @map("user_agent")
  requestId       String?     @map("request_id")
  sessionId       String?     @map("session_id")

  // 結果
  status          AuditStatus @default(SUCCESS)
  errorMessage    String?     @map("error_message")

  // 城市隔離
  cityCode        String?     @map("city_code")

  // 歸檔標記
  isArchived      Boolean     @default(false) @map("is_archived")

  // 時間戳（精確到毫秒）
  createdAt       DateTime    @default(now()) @map("created_at") @db.Timestamptz(3)

  // Relations
  user            User        @relation(fields: [userId], references: [id])
  city            City?       @relation("AuditLogCity", fields: [cityCode], references: [code])

  @@index([userId])
  @@index([action])
  @@index([resourceType, resourceId])
  @@index([createdAt])
  @@index([cityCode, createdAt])
  @@index([status])
  @@map("audit_logs")
}

enum AuditAction {
  CREATE
  READ
  UPDATE
  DELETE
  LOGIN
  LOGOUT
  EXPORT
  IMPORT
  APPROVE
  REJECT
  ESCALATE
  CONFIGURE
  GRANT   // 授予權限（城市/區域存取權）
  REVOKE  // 撤銷權限
}

enum AuditStatus {
  SUCCESS
  FAILURE
  PARTIAL
}

// =====================
// Document Management Models
// =====================

model Document {
  id              String          @id @default(uuid())
  fileName        String          @map("file_name")
  fileType        String          @map("file_type") // MIME type
  fileExtension   String          @map("file_extension") // pdf, jpg, png
  fileSize        Int             @map("file_size") // bytes
  filePath        String          @map("file_path") // Azure Blob URL
  blobName        String          @map("blob_name") // Azure Blob name
  fileHash        String?         @map("file_hash") // SHA-256 hash for deduplication (Story 9.1)
  status          DocumentStatus  @default(UPLOADED)
  errorMessage    String?         @map("error_message")
  processingPath  ProcessingPath? @map("processing_path")
  routingDecision Json?           @map("routing_decision")

  // 來源追蹤欄位（Story 9.1）
  sourceType        DocumentSourceType @default(MANUAL_UPLOAD) @map("source_type")
  sourceMetadata    Json?              @map("source_metadata")

  // SharePoint 特定欄位（Story 9.1）
  sharepointItemId  String?  @map("sharepoint_item_id")
  sharepointDriveId String?  @map("sharepoint_drive_id")
  sharepointSiteId  String?  @map("sharepoint_site_id")
  sharepointUrl     String?  @map("sharepoint_url")

  uploadedBy  String  @map("uploaded_by")
  cityCode    String  @map("city_code") // Story 6.1: 必填城市代碼
  forwarderId String? @map("forwarder_id")
  companyId   String? @map("company_id") // Story 0.3: 公司關聯

  // 工作流執行關聯（Story 10.3）
  workflowExecutionId String? @map("workflow_execution_id")

  // 處理進度追蹤（Story 10.6）
  processingStartedAt DateTime?  @map("processing_started_at")    // 處理開始時間
  processingEndedAt   DateTime?  @map("processing_ended_at")      // 處理結束時間
  processingDuration  Int?       @map("processing_duration")      // 總處理時長（毫秒）

  // 模版匹配關聯（Story 19.7）
  templateInstanceId  String?    @map("template_instance_id")
  templateMatchedAt   DateTime?  @map("template_matched_at")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  uploader            User                      @relation(fields: [uploadedBy], references: [id])
  city                City                      @relation("DocumentCity", fields: [cityCode], references: [code]) // Story 6.1
  ocrResult           OcrResult? // OCR 結果（一對一關聯）
  forwarder           Forwarder?                @relation(fields: [forwarderId], references: [id])
  company             Company?                  @relation("CompanyDocuments", fields: [companyId], references: [id]) // Story 0.3: 公司關聯
  identifications     ForwarderIdentification[]
  extractionResult    ExtractionResult? // 欄位提取結果（一對一關聯）
  processingQueue     ProcessingQueue? // 處理隊列（一對一關聯）
  reviewRecords       ReviewRecord[] // 審核記錄（Story 3.4）
  corrections         Correction[] // 欄位修正記錄（Story 3.5）
  escalation          Escalation? // 升級記錄（Story 3.7）
  ruleApplications    RuleApplication[] // 規則應用記錄（Story 4.1）
  suggestionSamples   SuggestionSample[] // 建議樣本（Story 4.4）
  testDetails         RuleTestDetail[] // 測試詳情（Story 5.4）
  apiUsageLogs        ApiUsageLog[]    @relation("DocumentApiUsageLogs") // API 使用記錄（Story 7.6）
  traceabilityReports TraceabilityReport[] // 追溯報告（Story 8.4）
  sharePointFetchLogs SharePointFetchLog[] // SharePoint 獲取記錄（Story 9.1）
  n8nWebhookEvents    N8nWebhookEvent[]    // n8n Webhook 事件（Story 10.1）
  workflowExecution   WorkflowExecution?        @relation("WorkflowExecutionDocuments", fields: [workflowExecutionId], references: [id]) // Story 10.3
  processingStages    DocumentProcessingStage[] // 處理階段記錄（Story 10.6）
  externalApiTask     ExternalApiTask?          // 外部 API 任務（Story 11.1）
  templateInstance    TemplateInstance?         @relation("TemplateInstanceDocuments", fields: [templateInstanceId], references: [id]) // Story 19.7: 模版匹配

  @@index([status])
  @@index([uploadedBy])
  @@index([cityCode])
  @@index([forwarderId])
  @@index([companyId])
  @@index([createdAt])
  @@index([sourceType])
  @@index([sharepointItemId])
  @@index([workflowExecutionId])
  @@index([templateInstanceId])
  @@map("documents")
}

// =====================
// OCR Result Model
// =====================

model OcrResult {
  id         String @id @default(uuid())
  documentId String @unique @map("document_id")

  // OCR 結果數據
  rawResult     Json   @map("raw_result") // Azure DI 原始回應
  extractedText String @map("extracted_text") @db.Text // 提取的文字內容
  invoiceData   Json?  @map("invoice_data") // 結構化發票數據

  // 處理指標
  processingTime Int?   @map("processing_time") // 處理時間 (ms)
  pageCount      Int?   @map("page_count") // 頁數
  confidence     Float? @map("confidence") // 整體信心度 (0-1)

  // 錯誤處理
  errorCode    String? @map("error_code") // 錯誤代碼
  errorMessage String? @map("error_message") // 錯誤訊息
  retryCount   Int     @default(0) @map("retry_count") // 重試次數

  // 時間戳
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  document Document @relation(fields: [documentId], references: [id], onDelete: Cascade)

  @@index([createdAt])
  @@map("ocr_results")
}

// =====================
// Forwarder Management Models
// =====================

model Forwarder {
  id          String @id @default(uuid())
  name        String @unique
  code        String @unique // Short code: "DHL", "FDX", "UPS"
  displayName String @map("display_name")

  // Story 5.5: 新增欄位
  description       String?         @db.Text
  logoUrl           String?         @map("logo_url")
  contactEmail      String?         @map("contact_email")
  defaultConfidence Float           @default(0.8) @map("default_confidence")
  status            ForwarderStatus @default(PENDING)

  // Identification Configuration
  identificationPatterns Json @map("identification_patterns")
  // Structure: {
