}

// =====================
// Notification Model (Story 3.6)
// =====================

model Notification {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  type      String   // RULE_SUGGESTION, ESCALATION, etc.
  title     String
  message   String
  data      String?  @db.Text // JSON string for additional data
  isRead    Boolean  @default(false) @map("is_read")
  createdAt DateTime @default(now()) @map("created_at")
  readAt    DateTime? @map("read_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, isRead])
  @@index([createdAt])
  @@map("notifications")
}

// =====================
// Escalation Model (Story 3.7, 3.8)
// =====================

model Escalation {
  id           String           @id @default(uuid())
  documentId   String           @unique @map("document_id")
  escalatedBy  String           @map("escalated_by")
  reason       EscalationReason
  reasonDetail String?          @map("reason_detail")
  status       EscalationStatus @default(PENDING)
  assignedTo   String?          @map("assigned_to")
  resolution   String?
  resolvedBy   String?          @map("resolved_by") // Story 3.8: 處理者
  createdAt    DateTime         @default(now()) @map("created_at")
  resolvedAt   DateTime?        @map("resolved_at")

  // Relations
  document       Document        @relation(fields: [documentId], references: [id], onDelete: Cascade)
  escalator      User            @relation("EscalationEscalator", fields: [escalatedBy], references: [id])
  assignee       User?           @relation("EscalationAssignee", fields: [assignedTo], references: [id])
  resolver       User?           @relation("EscalationResolver", fields: [resolvedBy], references: [id])
  ruleSuggestion RuleSuggestion? // 關聯的規則建議（Story 3.8）

  @@index([status])
  @@index([assignedTo])
  @@index([escalatedBy])
  @@index([resolvedBy])
  @@index([createdAt])
  @@map("escalations")
}

// =====================
// Rule Version Model (Story 4.1, 4.7)
